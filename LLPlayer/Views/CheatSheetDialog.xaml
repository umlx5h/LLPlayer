<UserControl x:Class="LLPlayer.Views.CheatSheetDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:LLPlayer.ViewModels"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:LLPlayer.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:helpers="clr-namespace:LLPlayer.Extensions"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance vm:CheatSheetDialogVM}"
             d:Foreground="White"
             d:Background="Black"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <local:CountToVisibilityConverter x:Key="CountToVisibilityConv" />
        <DataTemplate x:Key="ActionGroupItemTemplate" DataType="{x:Type vm:KeyBindingCSGroup}">
            <GroupBox
                materialDesign:ColorZoneAssist.Background="{Binding GroupColor, Converter={StaticResource ColorToBrushConv}}"
                materialDesign:ColorZoneAssist.Foreground="{DynamicResource MaterialDesignBody}"
                materialDesign:ColorZoneAssist.Mode="Custom"
                Header="{Binding GroupName}"
                Margin="10"
                Visibility="{Binding ElementName=ActionListView, Path=Items.Count, Converter={StaticResource CountToVisibilityConv}}">
                <ListView
                    x:Name="ActionListView"
                    ScrollViewer.VerticalScrollBarVisibility="Disabled"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    Focusable="False"
                    IsTabStop="False"
                    ItemsSource="{Binding KeyBindings}">

                    <!-- Scroll events are received by ScrollViewer instead of ListView -->
                    <i:Interaction.Behaviors>
                        <helpers:ScrollParentWhenAtMax />
                    </i:Interaction.Behaviors>

                    <ListView.View>
                        <GridView>
                            <GridViewColumn Width="36">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate DataType="{x:Type vm:KeyBindingCS}">
                                        <Button
                                            ToolTip="Do Action"
                                            Style="{StaticResource MaterialDesignIconButton}"
                                            Width="20"
                                            Height="20"
                                            Command="{Binding DataContext.CmdAction, ElementName=ActionListsItemsControl}"
                                            CommandParameter="{Binding}">
                                            <materialDesign:PackIcon Kind="Play" />
                                        </Button>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Shortcut" Width="120">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate DataType="{x:Type vm:KeyBindingCS}">
                                        <TextBlock
                                            Text="{Binding Path=Shortcut}"
                                            FontSize="14"
                                            TextWrapping="Wrap"
                                            FontWeight="SemiBold" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Action" Width="250">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate DataType="{x:Type vm:KeyBindingCS}">
                                        <TextBlock
                                            Text="{Binding Path=Description}"
                                            TextWrapping="Wrap"
                                            ToolTip="{Binding ActionName}" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>

                    <ListView.ItemContainerStyle>
                        <Style
                            TargetType="ListViewItem"
                            BasedOn="{StaticResource MaterialDesignGridViewItem}">
                            <Setter Property="Cursor" Value="Hand" />
                            <Setter Property="VerticalContentAlignment" Value="Center" />
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
            </GroupBox>
        </DataTemplate>

        <Style TargetType="GroupBox" BasedOn="{StaticResource MaterialDesignGroupBox}">
            <Setter Property="Padding" Value="0" />
        </Style>
    </UserControl.Resources>

    <materialDesign:Card>
        <TabControl
            HorizontalContentAlignment="Center"
            materialDesign:ColorZoneAssist.Mode="PrimaryLight">
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Keyboard" />
                        <TextBlock Text="Keyboard" Margin="6 0 0 0" />
                    </StackPanel>
                </TabItem.Header>
                <!--TODO: L: Aggregate display of multiple keys assigned to the same action? -->
                <!--TODO: L: clear with escape key -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Search Bar -->
                    <StackPanel Orientation="Horizontal" Margin="50 10 0 10" Grid.Row="0">
                        <TextBox
                            materialDesign:HintAssist.FloatingScale="0.50"
                            materialDesign:HintAssist.Hint="Search Action"
                            materialDesign:TextFieldAssist.TextBoxViewMargin="1 0 1 0"
                            Width="300"
                            FontSize="16"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                            Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                            />
                        <TextBlock Text="{Binding Path=HitCount, StringFormat={}{0} hit}"
                            FontSize="16"
                            VerticalAlignment="Center"
                            Margin="10 0 0 0" />
                    </StackPanel>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <StackPanel HorizontalAlignment="Center">
                            <ItemsControl
                                x:Name="ActionListsItemsControl"
                                ItemsSource="{Binding KeyBindingGroups}"
                                ItemTemplate="{StaticResource ActionGroupItemTemplate}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel  />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            <TabItem FontSize="16">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Mouse" />
                        <TextBlock Text="Mouse" Margin="6 0 0 0" />
                    </StackPanel>
                </TabItem.Header>
                <ScrollViewer>
                    <StackPanel>
                        <GroupBox
                            Padding="15"
                            Header="On Video"
                            Margin="20 10">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                                    <TextBlock
                                        Text="Left Click"
                                        Width="200" />
                                    <TextBlock
                                        Text="Toggle Play/Pause" />
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                                    <TextBlock
                                        Text="Right Click"
                                        Width="200" />
                                    <TextBlock
                                        Text="Open Context Menu" />
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                                    <TextBlock
                                        Text="Middle Click"
                                        Width="200" />
                                    <TextBlock
                                        Text="Seek to current subtitle if available" />
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                                    <TextBlock
                                        Text="Ctrl + Wheel"
                                        Width="200" />
                                    <TextBlock
                                        Text="Zoom In / Out" />
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                                    <TextBlock
                                        Text="Ctrl + Wheel Click"
                                        Width="200" />
                                    <TextBlock
                                        Text="Zoom Reset" />
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                                    <TextBlock
                                        Text="Ctrl + Left Drag"
                                        Width="200" />
                                    <TextBlock
                                        Text="Move Video Viewport" />
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                                    <TextBlock
                                        Text="Shift + Wheel"
                                        Width="200" />
                                    <TextBlock
                                        Text="Subtitles Position Up/Down" />
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                                    <TextBlock
                                        Text="Ctrl + Shift + Wheel"
                                        Width="200" />
                                    <TextBlock
                                        Text="Subtitles Size Increase/Decrease" />
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox
                            Padding="15"
                            Header="On Text Subtitles (including sidebar)"
                            Margin="20 10">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                                    <TextBlock
                                        Text="Left Click"
                                        Width="200" />
                                    <TextBlock
                                        Text="Word Lookup" />
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                                    <TextBlock
                                        Text="Left Drag"
                                        Width="200" />
                                    <TextBlock
                                        Text="Phrase Lookup" />
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                                    <TextBlock
                                        Text="Middle Click"
                                        Width="200" />
                                    <TextBlock
                                        Text="Sentence Lookup" />
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                                    <TextBlock
                                        Text="Left Click with Ctrl"
                                        Width="200" />
                                    <TextBlock
                                        Text="Last Word Action (Search)" />
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                                    <TextBlock
                                        Text="Right Click"
                                        Width="200" />
                                    <TextBlock
                                        Text="Word Actions (Search/Copy)" />
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox
                            Padding="15"
                            Header="On Context Menu"
                            Margin="20 10">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                                    <TextBlock
                                        Text="Left Click"
                                        Width="200" />
                                    <TextBlock
                                        Text="Fire an action" />
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                                    <TextBlock
                                        Text="Right Click"
                                        Width="200" />
                                    <TextBlock
                                        Text="Fire an action with the menu open" />
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                                    <TextBlock
                                        Text="Left Click with Ctrl"
                                        Width="200" />
                                    <TextBlock
                                        Text="Fire an action with the menu open" />
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox
                            Padding="15"
                            Header="Media title on Seekbar"
                            Margin="20 10">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                                    <TextBlock
                                        Text="Left Click"
                                        Width="200" />
                                    <TextBlock
                                        Text="Open file dialog" />
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                                    <TextBlock
                                        Text="Right Click"
                                        Width="200" />
                                    <TextBlock
                                        Text="Several actions on a current video" />
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </materialDesign:Card>
</UserControl>
