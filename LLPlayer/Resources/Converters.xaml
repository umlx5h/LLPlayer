<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:conv="clr-namespace:LLPlayer.Converters"
                    xmlns:flyleaf="clr-namespace:FlyleafLib.Controls.WPF;assembly=FlyleafLib">

    <!--Flyleaf Converters-->
    <flyleaf:StringToRationalConverter x:Key="StringToRationalConv"/>
    <flyleaf:TicksToTimeConverter x:Key="TicksToTimeConv"/>
    <flyleaf:TicksToSecondsConverter x:Key="TicksToSecondsConv" />
    <flyleaf:TicksToTimeSpanConverter x:Key="TicksToTimeSpanConv"/>
    <flyleaf:TicksToMilliSecondsConverter x:Key="TicksToMilliSecondsConv"/>

    <!--Flyleaf WPF Converters-->
    <conv:QualityToLevelsConverter x:Key="QualityToLevelsConv"/>
    <conv:VolumeToLevelsConverter x:Key="VolumeToLevelsConv"/>
    <conv:SumConverter x:Key="SumConv"/>
    <conv:PlaylistItemsConverter x:Key="PlaylistItemsConv"/>
    <conv:ColorToHexConverter x:Key="ColorToHexConv"/>
    <conv:Tuple3Converter x:Key="Tuple3Conv"/>
    <conv:SubIndexToIsEnabledConverter x:Key="SubIndexToIsEnabledConv"/>
    <conv:ChaptersToTicksConverter x:Key="ChaptersToTicksConv"/>
    <conv:ChaptersToTickPlacementConverter TickPlacement="TopLeft" x:Key="ChaptersToTickPlacementConv"/>
    <conv:AspectRatioIsCheckedConverter x:Key="AspectRatioIsCheckedConv"/>

    <!--General Converters-->
    <conv:BooleanToVisibilityMiscConverter x:Key="BooleanToVisibilityConv"/>
    <conv:BooleanToVisibilityMiscConverter Invert="True" x:Key="BooleanToVisibilityInvertConv"/>
    <conv:BooleanToVisibilityMiscConverter FalseVisibility="Hidden" x:Key="BooleanToVisibilityHiddenConv"/>
    <conv:DoubleToPercentageConverter x:Key="DoubleToPercentageConv"/>
    <conv:InvertBooleanConverter x:Key="InvertBooleanConv"/>
    <conv:ColorToBrushConverter x:Key="ColorToBrushConv"/>
    <conv:EnumToStringConverter x:Key="EnumToStringConv"/>
    <conv:EnumToDescriptionConverter x:Key="EnumToDescriptionConv"/>
    <conv:EnumToBooleanConverter x:Key="EnumToBooleanConv" />
    <conv:EnumToVisibilityConverter x:Key="EnumToVisibilityConv" />
    <conv:KeyToStringConverter x:Key="KeyToStringConv"/>
    <conv:FileSizeHumanConverter x:Key="FileSizeHumanConv"/>
    <conv:NullableIntConverter x:Key="NullableIntConv" />

    <!--Subtitle Converters-->
    <conv:WidthPercentageMultiConverter x:Key="WidthPercentageMultiConv"/>
    <conv:SubTextMaskConverter x:Key="SubTextMaskConv"/>
    <conv:SubTextFlowDirectionConverter x:Key="SubTextFlowDirectionConv"/>
    <conv:SubIsPlayingConverter x:Key="SubIsPlayingConv"/>
    <conv:ListItemIndexVisibilityConverter x:Key="ListItemIndexVisibilityConv"/>
    <conv:TimeSpanToStringConverter x:Key="TimeSpanToStringConv"/>
    <conv:SubBitmapImageSourceConverter x:Key="SubBitmapImageSourceConv"/>
    <conv:SubIndexToDisplayStringConverter x:Key="SubIndexToDisplayStringConv"/>

</ResourceDictionary>
