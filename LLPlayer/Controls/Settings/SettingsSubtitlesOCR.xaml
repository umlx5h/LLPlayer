<UserControl x:Class="LLPlayer.Controls.Settings.SettingsSubtitlesOCR"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:LLPlayer.Controls.Settings"
             xmlns:vm="clr-namespace:LLPlayer.ViewModels"
             xmlns:flyleaf="clr-namespace:FlyleafLib;assembly=FlyleafLib"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance local:SettingsSubtitlesOCRVM}"
             d:Foreground="White"
             d:Background="Black"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ObjectDataProvider x:Key="SubOCREngineTypeEnum" MethodName="GetValues" ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="flyleaf:SubOCREngineType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </UserControl.Resources>
    <ScrollViewer>
        <StackPanel>
            <TextBlock
                Text="Subtitles > OCR"
                FontSize="24"
                FontWeight="Bold"
                Margin="0 0 0 16" />

            <GroupBox Header="Select OCR Engine">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            Width="180"
                            Text="OCR Engine (Primary)" />
                        <ComboBox
                            Width="120"
                            ItemsSource="{Binding Source={StaticResource SubOCREngineTypeEnum}}"
                            SelectedItem="{Binding FL.PlayerConfig.Subtitles[0].OCREngine}" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            Width="180"
                            Text="OCR Engine (Secondary)" />
                        <ComboBox
                            Width="120"
                            ItemsSource="{Binding Source={StaticResource SubOCREngineTypeEnum}}"
                            SelectedItem="{Binding FL.PlayerConfig.Subtitles[1].OCREngine}" />
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Tesseract OCR">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Column="0"
                        Grid.Row="0"
                        FontSize="14" FontWeight="Bold"
                        Text="Downloaded Languages" />

                    <TextBlock
                        Grid.Column="1"
                        Grid.Row="0"
                        FontSize="14" FontWeight="Bold"
                        Text="Select specific region" />

                    <ListView
                        Grid.Column="0"
                        Grid.Row="1"
                        HorizontalAlignment="Left"
                        ItemsSource="{Binding DownloadedTessLanguages}"
                        MaxHeight="300"
                        ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn
                                    Header="Language"
                                    DisplayMemberBinding="{Binding Lang}"
                                    Width="200" />

                                <GridViewColumn
                                    Header="Size"
                                    DisplayMemberBinding="{Binding Size, Converter={StaticResource FileSizeHumanConv}}"
                                    Width="120" />
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <ListView
                        Grid.Row="1"
                        Grid.Column="1"
                        MaxHeight="300"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        ItemsSource="{Binding TessLanguageGroups}" Margin="10">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Text="{Binding DisplayName}"
                                        Width="100"
                                        VerticalAlignment="Center" />
                                    <ComboBox
                                        ItemsSource="{Binding Members}"
                                        SelectedItem="{Binding SelectedMember, Mode=TwoWay}"
                                        DisplayMemberPath="DisplayName"
                                        Width="150"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <Button
                        Grid.Column="0"
                        Grid.Row="2"
                        HorizontalAlignment="Left"
                        Margin="0 15 0 0"
                        MaxWidth="150"
                        Content="Download Model"
                        Command="{Binding CmdDownloadTessModel}" />

                    <TextBlock Grid.Column="1" Grid.Row="2" Margin="5 10 5 0">
                        Chinese may have multiple engines for their regions. Please specify what you want to use.
                    </TextBlock>
                </Grid>
            </GroupBox>

            <GroupBox Header="Microsoft OCR">
                <Grid Margin="10 10 30 10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Row="0" Grid.Column="0"
                        FontSize="14" FontWeight="Bold"
                        Text="Available Languages" />

                    <TextBlock
                        Grid.Row="0" Grid.Column="1"
                        FontSize="14" FontWeight="Bold"
                        Text="Select specific region" />

                    <ListView
                        Grid.Row="1"
                        Grid.Column="0"
                        MaxHeight="300"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        ItemsSource="{Binding AvailableMsOcrLanguages}"
                        ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn
                                    Header="Language"
                                    DisplayMemberBinding="{Binding DisplayName}"
                                    Width="150" />

                                <GridViewColumn
                                    Header="Code"
                                    DisplayMemberBinding="{Binding LanguageTag}"
                                    Width="150"  />
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <ListView
                        Grid.Row="1"
                        Grid.Column="1"
                        MaxHeight="300"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        ItemsSource="{Binding MsLanguageGroups}" Margin="10">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding DisplayName}" Width="100" VerticalAlignment="Center"/>
                                    <ComboBox
                                        ItemsSource="{Binding Members}"
                                        SelectedItem="{Binding SelectedMember, Mode=TwoWay}"
                                        DisplayMemberPath="DisplayName"
                                        Width="150"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <TextBlock Grid.Column="0" Grid.Row="2" Margin="5 10 5 0">
                        You will need to install a language pack on your OS or install an OCR engine using
                        <Hyperlink NavigateUri="https://learn.microsoft.com/en-us/windows/powertoys/text-extractor#supported-languages" RequestNavigate="Hyperlink_RequestNavigate">
                            this link
                        </Hyperlink>
                        as a reference.
                    </TextBlock>

                    <TextBlock Grid.Column="1" Grid.Row="2" Margin="5 10 5 0">
                        English, Chinese, and other languages may have multiple engines for their regions. Please specify what you want to use.
                    </TextBlock>
                </Grid>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</UserControl>
